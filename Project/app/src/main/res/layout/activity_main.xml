<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2B48C">

    <!-- Top Bar with Project Name and Avatar Icon -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Project Name -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FlowerStoreProject"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4A3728"
            android:gravity="center" />
    </LinearLayout>

    <!-- "Danh mục hoa" Text Above Filter Buttons -->
    <TextView
        android:id="@+id/tv_category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh mục hoa"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:background="@drawable/rounded_background"
        android:padding="12dp"
        android:layout_below="@id/top_bar"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />

    <!-- Filter Buttons -->
    <LinearLayout
        android:id="@+id/filter_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_category_label"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btnShowAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_background"
            android:padding="12dp"
            android:layout_marginStart="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Product Section -->
    <TextView
        android:id="@+id/tv_products_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/filter_buttons"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Sản phẩm"
        android:textColor="#4CAF50"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tv_products_label"
        android:layout_above="@id/bottom_navigation"
        android:layout_weight="1"
        android:padding="8dp" />

    <!-- Include Bottom Navigation -->
    <include layout="@layout/bottom_navigation" />

</RelativeLayout>