<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#FCE4EC">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/flower_logo"
        android:contentDescription="Ứng dụng cửa hàng hoa"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tvOTPMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã OTP đã được gửi đến email của bạn"
        android:textSize="20sp"
        android:textColor="#FF4081"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etOtp1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/edit_text_background"
            android:layout_marginEnd="4dp" />

        <EditText
            android:id="@+id/etOtp2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/edit_text_background"
            android:layout_marginEnd="4dp" />

        <EditText
            android:id="@+id/etOtp3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/edit_text_background"
            android:layout_marginEnd="4dp" />

        <EditText
            android:id="@+id/etOtp4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/edit_text_background"
            android:layout_marginEnd="4dp" />

        <EditText
            android:id="@+id/etOtp5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/edit_text_background"
            android:layout_marginEnd="4dp" />

        <EditText
            android:id="@+id/etOtp6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/edit_text_background" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnVerifyOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:backgroundTint="#4CAF50"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTintMode="src_over">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:indeterminateTint="#ffffff"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XÁC NHẬN"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvResendTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi lại OTP sau 01:00"
        android:textSize="16sp"
        android:textColor="#212121"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvResendOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi lại mã OTP"
        android:textColor="#0288D1"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground" />

</LinearLayout>
