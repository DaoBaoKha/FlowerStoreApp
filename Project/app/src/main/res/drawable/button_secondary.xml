<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondary_button_pressed" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/secondary_button_border" />
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondary_button_focused" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/secondary_button_border_focused" />
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondary_button_disabled" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/secondary_button_border_disabled" />
        </shape>
    </item>

    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/secondary_button_normal" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/secondary_button_border" />
        </shape>
    </item>

</selector>