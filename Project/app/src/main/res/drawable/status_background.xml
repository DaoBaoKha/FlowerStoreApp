<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Active/Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/status_active_bg" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/status_active_border" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/status_pressed_bg" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/status_border" />
        </shape>
    </item>

    <!-- Enabled state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/status_enabled_bg" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/status_border" />
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/status_disabled_bg" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/status_disabled_border" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/status_default_bg" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/status_border" />
        </shape>
    </item>

</selector>